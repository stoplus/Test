<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/frame_black</item>
    </style>

    <style name="TestButton" parent="android:Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TestText" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LinkText" parent="TestText">
        <item name="android:textColor">@drawable/selector_button_blue</item>
    </style>

    <style name="ButtonGreenTheme" parent="TestButton">
        <item name="android:background">@drawable/selector_button_green</item>
    </style>

    <style name="ButtonRedTheme" parent="TestButton">
        <item name="android:background">@drawable/selector_button_red</item>
    </style>

    <style name="ButtonBlueTheme" parent="TestButton">
        <item name="android:background">@drawable/selector_button_blue</item>
    </style>

    <style name="ButtonYellowTheme" parent="TestButton">
        <item name="android:background">@drawable/selector_button_yellow</item>
    </style>

    <style name="ButtonGrayTheme" parent="TestButton">
        <item name="android:background">@drawable/selector_button_gray</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
